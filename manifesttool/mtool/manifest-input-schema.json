{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Manifest-tool input validator",
  "description": "This schema is used to validate the manifest-tool configuration file.",
  "$comment": "for manifest v1, 'priority' is removed in the code to have it optional.",
  "type": "object",
  "required": [
    "vendor",
    "device",
    "priority",
    "payload"
  ],
  "properties": {
    "vendor": {
      "type": "object",
      "properties": {
        "domain": {
          "$ref": "#/definitions/non_empty_string",
          "description": "Vendor Domain",
          "pattern": "\\w+(\\.\\w+)+"
        },
        "vendor-id": {
          "$ref": "#/definitions/uuid_hex_string",
          "description": "Vendor UUID"
        },
        "custom-data-path": {
          "$ref": "#/definitions/non_empty_string",
          "description": "Path to custom data file  - must be accessible by the manifest-tool"
        }
      },
      "oneOf": [
        {
          "required": [
            "domain"
          ]
        },
        {
          "required": [
            "vendor-id"
          ]
        }
      ]
    },
    "device": {
      "type": "object",
      "properties": {
        "model-name": {
          "$ref": "#/definitions/non_empty_string",
          "description": "Device model name"
        },
        "class-id": {
          "$ref": "#/definitions/uuid_hex_string",
          "description": "Device class UUID"
        }
      },
      "oneOf": [
        {
          "required": [
            "model-name"
          ]
        },
        {
          "required": [
            "class-id"
          ]
        }
      ]
    },
    "priority": {
      "description": "Update priority. optional for manifest v1.",
      "type": "integer",
      "minimum": 0
    },
    "payload": {
      "type": "object",
      "required": [
        "url",
        "format",
        "file-path"
      ],
      "properties": {
        "format": {
          "description": "Payload format type",
          "enum": [
            "raw-binary",
            "arm-patch-stream",
            "combined",
            "encrypted-raw",
            "encrypted-combined"
          ]
        },
        "url": {
          "$ref": "#/definitions/non_empty_string",
          "description": "Payload URL in the cloud storage"
        },
        "file-path": {
          "$ref": "#/definitions/non_empty_string",
          "description": "Path to payload file - must be accessible by the manifest-tool"
        },
        "encrypted": {
          "type": "object",
          "required": [
            "digest",
            "size"
          ],
          "properties": {
            "digest": {
              "$ref": "#/definitions/digest_hex_string",
              "description": "Encrypted payload digest"
            },
            "size": {
              "type": "integer",
              "minimum": 1,
              "description": "Encrypted payload size"
            }
          }
        }
      },
      "if": {
        "properties": {
          "format": {
            "enum": [
              "encrypted-raw",
              "encrypted-combined"
            ]
          }
        }
      },
      "then": {
        "required": [
          "encrypted"
        ]
      }
    },
    "component": {
      "description": "Component name - only relevant for manifest v3",
      "type": "string",
      "minLength": 1
    },
    "sign-image": {
      "description": "Do sign installed image - only relevant for manifest v3. Required for devices with PKI image authentication in bootloader",
      "type": "boolean"
    },
    "signing-tool": {
      "description": "Path to an external signing tool that signs the manifest. Must be accessible by the manifest tool. The signing tool should accept the following arguments: <digest algorithm> <key identifier> <input file> <output file>.",
      "$ref": "#/definitions/non_empty_string"
    }
  },
  "definitions": {
    "non_empty_string": {
      "type": "string",
      "minLength": 1
    },
    "uuid_hex_string": {
      "type": "string",
      "pattern": "[0-9a-fA-F]{32}",
      "description": "HEX encoded UUID string"
    },
    "digest_hex_string": {
      "type": "string",
      "pattern": "[0-9a-fA-F]{64}",
      "description": "Digest HEX encoded string"
    }
  }
}